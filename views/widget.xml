<Alloy>
	<View id="music_player">
		<View id="border">
			<View id="progressbar" />
		</View>
		<View class="horizontalContainer">
			<View class="labelsContainer">
				<Label class="track" id="lbltrack"/>
				<Label class="title" id="lbltitle"/>
			</View>
			<View class="control">
				<ImageView class="controlLabel" id="prevBtn" />
				<ImageView class="controlLabel" id="playBtn"/>
				<ImageView class="controlLabel" id="nextBtn" />
			</View>
		</View>
	</View>
</Alloy>